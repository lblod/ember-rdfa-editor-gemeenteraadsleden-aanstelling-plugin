<div class="modal-dialog__header">
  <div class="grid">
    <div class="col--10-12">
		  <p class="u-spacer--tiny">
		    Wil u graag een tabel invoegen of beheren voor de <strong>rangorde van de gemeenteraadsleden</strong>?
		  </p>
    </div>
    <div class="col--2-12 u-align-right">
      <a class="link--icon--close" href="#"> {{!-- TODO: action close {{action "remove" result.origModel}} --}}
        <span class="u-visually-hidden">Venster sluiten</span>
      </a>
    </div>
  </div>
</div>
<div class="modal-dialog__footer">
  {{#wu-button-group}}
		{{wu-button
			label="Ga naar tabel"
			isNarrow=true
			onClick=(action 'togglePopup')
		}}
		{{wu-button
			label="Annuleer"
			class="button--alt"
			isNarrow=true
			onClick=null
		}}
  {{/wu-button-group}}
</div>

{{#if popup}}
  {{#wu-modal title="Pas rangorde gemeenteraadsleden aan" dialog-class="modal-dialog--wide modal-dialog--sectioned" dialog-content-class="modal-dialog__content--sectioned" onClose=(action 'togglePopup') as |m|}}
    {{#m.content isSectioned=true}}
      {{editor-plugins/verkozenen-lijst bestuursorgaan=bestuursorgaan save=(action 'insert')}}
    {{/m.content}}
    <div class="modal-dialog__footer">
  		{{#wu-button-group}}
		    <button class="button button--narrow">Bewaar</button>
		    <button class="button button--alt button--narrow">Verwerp wijzigingen</button>
		  {{/wu-button-group}}
	  </div>
  {{/wu-modal}}
{{/if}}

