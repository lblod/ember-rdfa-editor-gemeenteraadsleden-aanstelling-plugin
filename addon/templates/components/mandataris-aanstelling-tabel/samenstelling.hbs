<table class="data-table data-table--lined data-table--zebra data-table--tight">
  <thead>
    <tr>
      <th>OfficiÃ«le naam</th>
      <th>Lijst</th>
      <th>
        Status
      </th>
      <th>
        <div class="grid">
          <div class="col--6-12">
            Actie
          </div>
          <div class="col--6-12 u-align--right">
            {{#wu-link-button class="button--small" isNarrow=true onClick=(action "add")}}
              <i class="vi vi-plus vi-u-s"></i>Voeg persoon of opvolger toe
            {{/wu-link-button}}
          </div>
        </div>
      </th>
    </tr>
  </thead>
  <tbody>
    {{#if adding}}
    <tr>
      <td>
        {{mandataris-aanstelling-tabel/opvolger-selector bestuursorgaan=bestuursorgaan opvolger=opvolger onSelect=(action "selectOpvolger")}}
        <p class="u-spacer--top--tiny">U kan hier zoeken naar een opvolger of persoon die ook in de tabel moet verschijnen.</p>
          </td>
          <td>{{moment-format newOpvolger.geboorte.datum 'DD/MM/YYYY'}}</td>
          <td>
            {{#wu-button-group}}
              {{#wu-link-button class="button--small" isNarrow=true onClick=(action "addOpvolger")}}
                <i class="vi vi-check vi-u-xs"></i>Voeg persoon of opvolger toe
              {{/wu-link-button}}
              {{#wu-link-button class="button--small button--alt" isNarrow=true onClick=(action "cancelAdd")}}
                <i class="vi vi-cross vi-u-s"></i>Annuleer
              {{/wu-link-button}}
            {{/wu-button-group}}
          </td>
    </tr>
    {{/if}}
    {{#each verkozenen as |verkozene|}}
      {{mandataris-aanstelling-tabel/samenstelling-row verkozene=verkozene  onRemove=(action "remove")}}
    {{else}}
      <td colspan="5">
        Er werden geen effectief verkozenen gevonden
      </td>
    {{/each}}
  </tbody>
</table>
